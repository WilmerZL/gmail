<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Icono del remitente -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/email_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Icono del remitente"
        android:src="@drawable/ic_email" />

    <!-- Contenedor para la informaciÃ³n del correo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del remitente -->
        <TextView
            android:id="@+id/email_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remitente"
            android:textColor="#444444"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Asunto del correo -->
        <TextView
            android:id="@+id/email_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto del correo"
            android:textColor="#666666"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Fecha y estrella -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Fecha del correo -->
        <TextView
            android:id="@+id/email_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="9 ene"
            android:textColor="#444444"
            android:textSize="12sp" />

        <!-- Icono de estrella -->
        <ImageView
            android:id="@+id/email_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_star"
            android:contentDescription="Marcar como importante" />
    </LinearLayout>
</LinearLayout>
